<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectZia.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="colorBlue">#003366</Color>
            <Color x:Key="colorWhite">#FCF9F0</Color>
            <Style x:Key="mainButtonsStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource colorBlue}"></Setter>
                <Setter Property="TextColor" Value="{StaticResource colorWhite}"></Setter>
            </Style>
        </ResourceDictionary>
        
    </Application.Resources>
</Application>